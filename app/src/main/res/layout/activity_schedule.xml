<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    >
    <TextView
        android:id="@+id/bigTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_alignStart="@+id/edit1"
        android:text="행사 수정"
        android:textSize="30sp"
        android:textColor="#ffffff"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bigTitle"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="40dp"
        android:text="제목"
        android:textSize="13sp"
        android:textColor="#ffffff"/>

    <EditText
        android:id="@+id/edit1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/borderline_full"
        />

    <TextView
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/title"
        android:layout_below="@+id/edit1"
        android:text="위치"
        android:textSize="13sp"
        android:textColor="#ffffff"/>

    <EditText
        android:id="@+id/edit2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/edit1"
        android:layout_alignEnd="@+id/edit1"
        android:layout_below="@+id/location"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/borderline_full"
        />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/title"
        android:layout_below="@+id/edit2"
        android:text="날짜"
        android:textSize="13sp"
        android:textColor="#ffffff"/>

    <EditText
        android:id="@+id/edit3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/edit1"
        android:layout_alignEnd="@+id/edit1"
        android:layout_below="@+id/date"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/borderline_full"
        />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/title"
        android:layout_below="@+id/edit3"
        android:text="시간"
        android:textSize="13sp"
        android:textColor="#ffffff"/>

    <EditText
        android:id="@+id/edit4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/edit1"
        android:layout_alignEnd="@+id/edit1"
        android:layout_below="@+id/time"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/borderline_full"
        android:text="오전 10 : 00"
        android:textSize="13sp"
        android:textColor="#ffffff"
        android:paddingLeft="10dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        />

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignEnd="@+id/edit4"
        android:layout_below="@+id/edit4"
        android:layout_marginTop="40dp"
        android:padding="6dp"
        android:text="Submit"
        android:textSize="15sp"
        android:textColor="#000000"
        android:background="@drawable/buttonshape"/>

</RelativeLayout>